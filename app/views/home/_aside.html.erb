<aside class="md:block md:w-1/3 bg-white p-6 shadow-lg transition-transform duration-300 transform translate-x-0 md:translate-x-0" id="sidebar">
  <button id="sidebar-toggle" class="absolute top-2 right-2 p-2 bg-gray-200 rounded hover:bg-gray-300 z-50">
    <%= inline_svg_tag("icons/icon_hamburger.svg", class: "w-6 h-6") %>
  </button>
  <div class="space-y-6">
    <!-- Foto y nombre -->
    <div class="text-center">
      <div class="w-32 h-32 mx-auto rounded-full overflow-hidden">
        <%= image_tag current_user.avatar.thumb.url, class: "w-full h-full object-cover" %>
      </div>
      <h2 class="mt-4 text-2xl font-bold text-gray-800"><%= current_user.name %></h2>
      <p class="text-pink-600 font-medium"><%= current_user.role %></p>
    </div>

    <!-- Estadísticas -->
    <div class="grid grid-cols-3 gap-4 py-4 border-y border-gray-200">
      <div class="text-center">
        <p class="text-2xl font-bold text-gray-800">150</p>
        <p class="text-sm text-gray-600">Visitas</p>
      </div>
      <div class="text-center">
        <p class="text-2xl font-bold text-gray-800">45</p>
        <p class="text-sm text-gray-600">Me gusta</p>
      </div>
      <div class="text-center">
        <p class="text-2xl font-bold text-gray-800">12</p>
        <p class="text-sm text-gray-600">Matches</p>
      </div>
    </div>

    <!-- Resumen del perfil -->
    <div class="space-y-4">
      <h3 class="text-lg font-semibold text-gray-800">Sobre mí</h3>
      <p class="text-gray-600">
        <%= current_user.bio || "Completa tu perfil para que otros usuarios puedan conocerte mejor." %>
      </p>
    </div>
  </div>
</aside>